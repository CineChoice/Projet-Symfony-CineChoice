{% extends 'base.html.twig' %}

{% block title %}Liste des Séances{% endblock %}

{% block body %}

    <h1 class="pt-2 text-center">Liste des Séances</h1>
    <hr>
    <div class="row pt-2">

        {% for laSeance in lesSeances %}

            <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4">
                <div class="card mb-3">
                    <h4 class="card-header" align="center">N°{{laSeance.id}}</h4>
                    <div class="card-body">
                        <ul class="list-group list-group-flush text-left">
                            <li class="list-group-item pl-4"><i class="fas fa-video"></i> : {{laSeance.film.nom}}.</li>
                            <li class="list-group-item pl-4"><i class="fas fa-map-marker-alt"></i> : {{laSeance.salle.nom}}.</li>
                            <li class="list-group-item pl-4"><i class="far fa-calendar-alt"></i> : {{laSeance.date}}.</li>
                            <li class="list-group-item pl-4"><i class="far fa-clock"></i> : {{laSeance.heure}}.</li>
                        </ul>
                    </div>
                </div>
            </div>

        {% endfor %} 

    <div class="navigation mx-auto">
        {{ knp_pagination_render(lesSeances) }}
    </div>

    </div>

{% endblock %}
